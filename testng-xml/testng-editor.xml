<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Editor" time-out="600000" parallel="methods" thread-count="8" configfailurepolicy="continue">
    <listeners>
        <listener class-name="com.infra.test_strategy.annotations.TestsDisablingAccordingToEnvListener" />
        <listener class-name="com.infra.test_strategy.TestRetryAnalyzerListener" />
    </listeners>
    <!--*************************************** All-Browser-Tests ***************************************-->
    <!--***************************************chrome ***************************************-->
    <test name="all-CHROME-tests">
        <parameter name="browser" value="CHROME"/>
        <groups>
            <run>
                <include name="browser.chrome"/>
                <include name="browser.all"/>
                <exclude name="bug.*"/>
            </run>
        </groups>
        <packages>
            <package name="com.automation_tests.ui.platform.editor.*"/>
        </packages>
    </test>
    <!--*************************************** Safari ***************************************-->
